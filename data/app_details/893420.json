rvested.","developers":["Vashta Entertainment"],"genres":[{"description":"Action","id":"1"},{"description":"Strategy","id":"2"}],"header_image":"https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/893420/header.jpg?t=1616276828","is_free":false,"linux_requirements":[],"mac_requirements":[],"movies":[{"highlight":true,"id":256826816,"mp4":{"480":"http://video.akamai.steamstatic.com/store_trailers/256826816/movie480.mp4?t=1616272253","max":"http://video.akamai.steamstatic.com/store_trailers/256826816/movie_max.mp4?t=1616272253"},"name":"Release Trailer","thumbnail":"https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/256826816/movie.293x165.jpg?t=1616272253","webm":{"480":"http://video.akamai.steamstatic.com/store_trailers/256826816/movie480_vp9.webm?t=1616272253","max":"http://video.akamai.steamstatic.com/store_trailers/256826816/movie_max_vp9.webm?t=1616272253"}},{"highlight":true,"id":256826815,"mp4":{"480":"http://video.akamai.steamstatic.com/store_trailers/256826815/movie480.mp4?t=1616272260","max":"http://video.akamai.steamstatic.com/store_trailers/256826815/movie_max.mp4?t=1616272260"},"name":"Story Chapter 5 Trailer","thumbnail":"https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/256826815/movie.293x165.jpg?t=1616272260","webm":{"480":"http://video.akamai.steamstatic.com/store_trailers/256826815/movie480_vp9.webm?t=1616272260","max":"http://video.akamai.steamstatic.com/store_trailers/256826815/movie_max_vp9.webm?t=1616272260"}},{"highlight":true,"id":256826814,"mp4":{"480":"http://video.akamai.steamstatic.com/store_trailers/256826814/movie480.mp4?t=1616272267","max":"http://video.akamai.steamstatic.com/store_trailers/256826814/movie_max.mp4?t=1616272267"},"name":"Story Chapter 4 Trailer","thumbnail":"https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/256826814/movie.293x165.jpg?t=1616272267","webm":{"480":"http://video.akamai.steamstatic.com/store_trailers/256826814/movie480_vp9.webm?t=1616272267","