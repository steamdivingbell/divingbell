ructing modules, and performing research.","developers":["Explorasaurus Studios"],"genres":[{"description":"Indie","id":"23"},{"description":"Simulation","id":"28"},{"description":"Strategy","id":"2"}],"header_image":"https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/349540/header.jpg?t=1587680134","is_free":true,"linux_requirements":[],"mac_requirements":{"minimum":"<strong>Minimum:</strong><br><ul class=\"bb_ul\"><li><strong>OS:</strong> 10.9<br></li><li><strong>Processor:</strong> 2.4 GHz Intel Core i5<br></li><li><strong>Memory:</strong> 4 GB RAM<br></li><li><strong>Graphics:</strong> AMD Radeon HD 6770M 1024 MB<br></li><li><strong>Storage:</strong> 4 GB available space</li></ul>"},"movies":[{"highlight":true,"id":256677320,"mp4":{"480":"http://video.akamai.steamstatic.com/store_trailers/256677320/movie480.mp4?t=1483222737","max":"http://video.akamai.steamstatic.com/store_trailers/256677320/movie_max.mp4?t=1483222737"},"name":"Patch 5.0.0 Steam Trailer","thumbnail":"https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/256677320/movie.293x165.jpg?t=1483222737","webm":{"480":"http://video.akamai.steamstatic.com/store_trailers/256677320/movie480.webm?t=1483222737","max":"http://video.akamai.steamstatic.com/store_trailers/256677320/movie_max.webm?t=1483222737"}},{"highlight":true,"id":256677125,"mp4":{"480":"http://video.akamai.steamstatic.com/store_trailers/256677125/movie480.mp4?t=1483222745","max":"http://video.akamai.steamstatic.com/store_trailers/256677125/movie_max.mp4?t=1483222745"},"name":"Patch 5.0.0 Steam Trailer2","thumbnail":"https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/256677125/movie.293x165.jpg?t=1483222745","webm":{"480":"http://video.akamai.steamstatic.com/store_trailers/256677125/movie480.webm?t=1483222745","max":"http://video.akamai.steamstatic.com/store_trailers/256677125/movie_max.webm?t=1483222745"}}],"name":"PeriAreion","package_groups":[],"packages":[449263],"pc_requirements":{"minimum":"<s