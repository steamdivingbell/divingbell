cerely,</p><p class=\"bb_paragraph\"><strong>Human&amp;Power</strong></p>","developers":["GDH Studio"],"fullgame":{"appid":"2446870","name":"MONOTONIA"},"genres":[{"description":"Indie","id":"23"}],"header_image":"https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/3194370/header.jpg?t=1730290124","is_free":true,"linux_requirements":{"minimum":"<strong>Minimum:</strong><br><ul class=\"bb_ul\"></ul>","recommended":"<strong>Recommended:</strong><br><ul class=\"bb_ul\"></ul>"},"mac_requirements":{"minimum":"<strong>Minimum:</strong><br><ul class=\"bb_ul\"></ul>","recommended":"<strong>Recommended:</strong><br><ul class=\"bb_ul\"></ul>"},"movies":[{"highlight":true,"id":257065820,"mp4":{"480":"http://video.akamai.steamstatic.com/store_trailers/257065820/movie480.mp4?t=1729086039","max":"http://video.akamai.steamstatic.com/store_trailers/257065820/movie_max.mp4?t=1729086039"},"name":"Gameplay Trailer","thumbnail":"https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/257065820/9aa60b298f38d980822138ff74f3aee0561f1634/movie_600x337.jpg?t=1729086039","webm":{"480":"http://video.akamai.steamstatic.com/store_trailers/257065820/movie480_vp9.webm?t=1729086039","max":"http://video.akamai.steamstatic.com/store_trailers/257065820/movie_max_vp9.webm?t=1729086039"}},{"highlight":true,"id":257061468,"mp4":{"480":"http://video.akamai.steamstatic.com/store_trailers/257061468/movie480.mp4?t=1727988452","max":"http://video.akamai.steamstatic.com/store_trailers/257061468/movie_max.mp4?t=1727988452"},"name":"Demo Monotonia Trailer","thumbnail":"https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/257061468/e988ca94a1b99e6a27d16d3f8cc4847a77c3d7be/movie_600x337.jpg?t=1727988452","webm":{"480":"http://video.akamai.steamstatic.com/store_trailers/257061468/movie480_vp9.webm?t=1727988452","max":"http://video.akamai.steamstatic.com/store_trailers/257061468/movie_max_vp9.webm?t=1727988452"}}],"name":"Monotonia Demo","package_groups":[],"pc_requirements":